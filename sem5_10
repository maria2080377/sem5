#include <iostream>    //Задача 10
#include <vector> 
#include <algorithm>
#include <numeric>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");

	vector <int> vec(30);
	int k = 0, len = 0;

	for_each(vec.begin(), vec.end(), [](int& x) {x =1+ rand() % 100; ; });
	for_each(vec.begin(), vec.end(), [](int x) {cout << x << " "; });
	cout << endl;
	
	auto maxit = max_element(vec.begin(), vec.end());
	auto minit = min_element(vec.begin(), vec.end());
	double suma = accumulate(vec.begin(), vec.end(), 0);
	auto mx = find(vec.begin(), vec.end(), *maxit);
	auto mn = find(vec.begin(), vec.end(), *minit);
	for (int x : vec) {
		len++;
	}
	double cr = suma / 30;
	cout << "Среднесуточное значение: " << cr << endl;
	cout << "День с максимальным потребление: " << *mx << ", день с минимальным потреблением: " << *mn << endl;

	vec.erase(remove_if(vec.begin(), vec.end(), [cr](int x) {return x > (12 * cr) / 10; }), vec.end());
	
	
	for_each(vec.begin(), vec.end(), [](int x) {cout << x << " "; });
	

	return 0;
}
