#include <iostream>    //Задача 9
#include <vector> 
#include <algorithm>
#include <numeric>
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");
	
	vector <int> vec(20);
	int k = 0, len = 0;

	for_each(vec.begin(), vec.end(), [](int& x) {x = rand() % 200 + (-100); });
	for_each(vec.begin(), vec.end(), [](int x) {cout << x << " "; });
	cout << endl;
	vec.erase(remove_if(vec.begin(), vec.end(), [](int x) {return x <0; }), vec.end());
	auto maxit = max_element(vec.begin(), vec.end());
	auto minit = min_element(vec.begin(), vec.end());
	double suma = accumulate(vec.begin(), vec.end(), 0);
	for (int x : vec) {
		len++;
		if (x > 10 && x < 90) {
			k++;
		}
	}
	
	cout << "Максималиная мощность: " << *maxit << ", " << "минимальная мощность: " << *minit << ", средняя мощность: " << suma / len << endl;

	if (len == k) {
		cout << "Все мощности от 10 до 90"<<endl;
	}
	else {
		cout << "Не все мощности от 10 до 90"<<endl;
	}
	sort(vec.begin(), vec.end());
	for_each(vec.begin(), vec.end(), [](int x) {cout << x << " "; });
	cout << endl;

	if (len % 2 != 0) {
		for (int i = 0; i < len; i++) {
			if (i == (len / 2)) {
				cout<< "Медиана равна: " << vec[i];
			}
		}
	}
	else {
		for (int i = 0; i < len; i++) {
			if (i == (len/2)-1) {
				float med = (vec[i] + vec[i + 1]);
				cout <<"Медиана равна: " << med / 2;
			}
		}
	}



	return 0;
}
